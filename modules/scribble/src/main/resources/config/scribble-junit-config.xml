<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertiesPlaceholderScribble"
          class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
        <property name="properties">
            <props>
                <prop key="server.proposals.file">file:${java.io.tmpdir}/wisematches/work/proposals.ser</prop>
                <prop key="server.dictionary.path">file:${java.io.tmpdir}/wisematches/work/dictionaries</prop>
            </props>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <bean id="wordGamesDictionaries"
          class="wisematches.playground.dictionary.impl.resource.ResourceDictionaryManager">
        <property name="filePostfix" value="properties"/>
        <property name="filePrefix" value="dictionary"/>
        <property name="dictionariesPath" value="classpath:/dicts/*"/>
    </bean>

    <import resource="scribble-config.xml"/>
</beans>