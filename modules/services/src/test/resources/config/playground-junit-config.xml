<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertiesPlaceholderServices"
          class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
        <property name="properties">
            <props>
                <prop key="server.web.host">localhost:8080</prop>
                <prop key="server.mail.host">localhost:8080</prop>
                <prop key="server.alerts.box">alerts@localhost</prop>

                <prop key="advertisement.providers.file"/>

                <prop key="mail.server.host">localhost</prop>
                <prop key="mail.server.port">25</prop>
                <prop key="mail.server.username"/>
                <prop key="mail.server.password"/>


                <prop key="server.admins">1028</prop>
                <prop key="server.moderators">1028</prop>
                <prop key="server.images.path">file:${java.io.tmpdir}/wisematches/work/images</prop>
                <prop key="server.proposals.file">file:${java.io.tmpdir}/wisematches/work/proposals.ser</prop>
                <prop key="server.properties.file">file:${java.io.tmpdir}/wisematches/work/properties.ser</prop>
                <prop key="server.dictionary.path">../../resources/dictionaries</prop>
            </props>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <import resource="classpath:/config/playground-config.xml"/>
</beans>