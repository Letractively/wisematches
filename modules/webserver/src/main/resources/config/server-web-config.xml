<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="notificationFreemarkerConfig"
          class="org.springframework.ui.freemarker.FreeMarkerConfigurationFactoryBean">
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="preferFileSystemAccess" value="false"/>
        <property name="templateLoaderPath" value="classpath:/i18n/message"/>
    </bean>

    <bean id="gameMessageSource" class="wisematches.server.web.i18n.GameMessageSource">
        <property name="messageSource" ref="messageSource"/>
    </bean>

    <bean id="accountRecoveryManager" class="wisematches.server.web.services.recovery.RecoveryTokenManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="playerImagesManager" class="wisematches.server.web.services.images.impl.FilePlayerImagesManager">
        <property name="imagesFolder" value="${server.images.path}/players"/>
    </bean>

    <bean id="scribbleCommentManager"
          class="wisematches.server.web.services.comment.impl.HibernateScribbleCommentManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="friendsManager" class="wisematches.server.web.services.friends.impl.HibernateFriendsManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="playerStateManager" class="wisematches.server.web.services.state.impl.SessionRegistryStateManager"/>

    <bean id="advertisementManager" class="wisematches.server.web.services.ads.impl.XMLAdvertisementManager">
        <property name="adsResource" value="${advertisement.providers.file}"/>
    </bean>
</beans>