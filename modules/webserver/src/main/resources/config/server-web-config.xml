<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="accountRecoveryManager" class="wisematches.server.web.services.recovery.RecoveryTokenManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="playerImagesManager" class="wisematches.server.web.services.images.impl.FilePlayerImagesManager">
        <property name="imagesFolder" value="${server.images.path}/players"/>
    </bean>

    <bean id="advertisementManager" class="wisematches.server.web.services.ads.impl.XMLAdvertisementManager">
        <property name="adsResource" value="${advertisement.providers.file}"/>
    </bean>

    <bean id="activeGamesRestriction" class="wisematches.server.web.services.restriction.impl.RestrictionDescription">
        <property name="name" value="games.active"/>
        <property name="restrictions">
            <map value-type="java.lang.Integer">
                <entry key="GUEST" value="1"/>
                <entry key="BASIC" value="5"/>
                <entry key="SILVER" value="10"/>
                <entry key="GOLD" value="30"/>
                <entry key="PLATINUM" value="100"/>
            </map>
        </property>
    </bean>

    <bean id="scribbleMemoryRestriction"
          class="wisematches.server.web.services.restriction.impl.RestrictionDescription">
        <property name="name" value="scribble.memory"/>
        <property name="restrictions">
            <map value-type="java.lang.Integer">
                <entry key="GUEST" value="1"/>
                <entry key="BASIC" value="2"/>
                <entry key="SILVER" value="5"/>
                <entry key="GOLD" value="20"/>
                <entry key="PLATINUM" value="50"/>
            </map>
        </property>
    </bean>

    <bean id="scribbleOpponentsRestriction"
          class="wisematches.server.web.services.restriction.impl.RestrictionDescription">
        <property name="name" value="scribble.opponents"/>
        <property name="restrictions">
            <map value-type="java.lang.Integer">
                <entry key="GUEST" value="1"/>
                <entry key="BASIC" value="1"/>
                <entry key="SILVER" value="2"/>
                <entry key="GOLD" value="2"/>
                <entry key="PLATINUM" value="3"/>
            </map>
        </property>
    </bean>

    <bean id="playerRestrictionManager"
          class="wisematches.server.web.services.restriction.impl.PlayerRestrictionManagerImpl">
        <property name="restrictions">
            <list>
                <ref bean="activeGamesRestriction"/>
                <ref bean="scribbleMemoryRestriction"/>
                <ref bean="scribbleOpponentsRestriction"/>
            </list>
        </property>
    </bean>

    <bean id="notification" class="wisematches.server.web.services.notice.NotificationDescription" abstract="true"/>

    <bean id="notificationManager" class="wisematches.server.web.services.notice.impl.HibernateNotificationManager">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="notificationDescription">
            <list>
                <bean parent="notification" c:name="game.started" c:series="games" c:evenOnline="false"
                      c:enabled="false"/>
                <bean parent="notification" c:name="game.move.your" c:series="games" c:evenOnline="false"
                      c:enabled="true"/>
                <bean parent="notification" c:name="game.move.opponent" c:series="games" c:evenOnline="false"
                      c:enabled="false"/>
                <bean parent="notification" c:name="game.finished" c:series="games" c:evenOnline="true"
                      c:enabled="true"/>
                <bean parent="notification" c:name="game.timeout.day" c:series="timeout" c:evenOnline="false"
                      c:enabled="true"/>
                <bean parent="notification" c:name="game.timeout.half" c:series="timeout" c:evenOnline="false"
                      c:enabled="true"/>
                <bean parent="notification" c:name="game.timeout.hour" c:series="timeout" c:evenOnline="true"
                      c:enabled="true"/>
                <bean parent="notification" c:name="message" c:series="message" c:evenOnline="false"
                      c:enabled="true"/>
            </list>
        </property>
    </bean>
</beans>