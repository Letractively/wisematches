<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="applicationEventTaskExecutor" class="wisematches.playground.task.executor.TransactionAwareTaskExecutor">
        <property name="taskExecutor">
            <bean class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
                <property name="poolSize" value="1"/>
                <property name="threadNamePrefix" value="NotificationManager"/>
                <property name="waitForTasksToCompleteOnShutdown" value="true"/>
            </bean>
        </property>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="applicationEventMulticaster" class="org.springframework.context.event.SimpleApplicationEventMulticaster">
        <property name="taskExecutor" ref="applicationEventTaskExecutor"/>
    </bean>

    <bean id="gameMessageSource" class="wisematches.server.web.i18n.GameMessageSource">
        <property name="messageSource" ref="messageSource"/>
    </bean>

    <bean id="accountRecoveryManager" class="wisematches.server.web.services.recovery.RecoveryTokenManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="playerImagesManager" class="wisematches.server.web.services.images.impl.FilePlayerImagesManager">
        <property name="imagesFolder" value="${server.images.path}/players"/>
    </bean>

    <bean id="playerStateManager" class="wisematches.server.web.services.state.impl.HibernatePlayerStateManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="scribbleObjectsConverter"
          class="wisematches.server.web.controllers.playground.scribble.controller.board.ScribbleObjectsConverter">
        <property name="gameMessageSource" ref="gameMessageSource"/>
    </bean>

    <bean id="advertisementManager" class="wisematches.server.web.services.ads.impl.XMLAdvertisementManager">
        <property name="adsResource" value="${advertisement.providers.file}"/>
    </bean>

    <bean id="dictionaryChangeManager"
          class="wisematches.server.web.services.dictionary.impl.HibernateDictionarySuggestionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="dictionaryManager" ref="dictionaryManager"/>
    </bean>
</beans>