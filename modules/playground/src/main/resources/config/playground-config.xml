<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <import resource="restriction-config.xml"/>

    <bean id="playerTrackingCenterDao" class="wisematches.playground.tracking.impl.HibernatePlayerTrackingCenterDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="ratingManager" class="wisematches.playground.tracking.impl.RatingManagerImpl">
        <property name="ratingSystem">
            <bean class="wisematches.playground.rating.ELORatingSystem"/>
        </property>
        <property name="defaultRating" value="1200"/>
        <property name="proprietaryRatings">
            <map>
                <entry key="1" value="1200"/>
                <entry key="2" value="800"/>
                <entry key="3" value="1200"/>
                <entry key="4" value="1600"/>
            </map>
        </property>
        <property name="trackingCenterDao" ref="playerTrackingCenterDao"/>
    </bean>

    <bean id="dictionaryManager" class="wisematches.playground.dictionary.impl.FileDictionaryManager">
        <property name="dictionariesFolder" value="${server.dictionary.path}"/>
    </bean>
</beans>