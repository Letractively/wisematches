    <bean id="messagesCleanerTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="cronExpression" value="0 0 2 * * ?"/>
        <!-- run every morning at 2 AM -->
        <property name="jobDetail">
            <bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
                <property name="targetObject" ref="messageManager"/>
                <property name="targetMethod" value="cleanup"/>
                <property name="concurrent" value="false"/>
            </bean>
        </property>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <!--<ref bean="tournamentTrigger"/>-->
                <ref bean="messagesCleanerTrigger"/>
            </list>
        </property>
    </bean>
</beans>