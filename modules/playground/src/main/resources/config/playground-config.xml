    <bean id="newTournamentTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="cronExpression" value="*/1 * * * * ?"/>
        &lt;!&ndash;<property name="cronExpression" value="0 30 2 ? * 2#1"/>&ndash;&gt;
        &lt;!&ndash;First monday of every month &ndash;&gt;
        <property name="jobDetail">
            <bean class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
                <property name="targetObject" ref="tournamentCenter"/>
