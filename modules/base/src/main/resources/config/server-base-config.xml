<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="lockAccountManager" class="wisematches.server.personality.account.impl.HibernateAccountLockManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="accountManager" class="wisematches.server.personality.account.impl.HibernateAccountManager">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="accountLockManager" ref="lockAccountManager"/>
    </bean>

    <bean id="lexicalDictionary" class="wisematches.server.gameplaying.dictionary.impl.file.FileDictionaryManager">
        <property name="dictionariesFolder" value="${server.dictionary.path}/lexical"/>
    </bean>

    <bean id="slanglyDictionary" class="wisematches.server.gameplaying.dictionary.impl.file.FileDictionaryManager">
        <property name="dictionariesFolder" value="${server.dictionary.path}/slangly"/>
        <property name="createEmptyDictionary" value="true"/>
    </bean>

    <bean id="wordGamesDictionaries" class="wisematches.server.gameplaying.dictionary.impl.WordGamesDictionariesImpl">
        <property name="lexicalManager" ref="lexicalDictionary"/>
        <property name="slanglyManager" ref="slanglyDictionary"/>
    </bean>

    <bean id="playerManager" class="wisematches.server.personality.player.StandingPlayerManager">
        <property name="ratingManager" ref="ratingManager"/>
        <property name="accountManager" ref="accountManager"/>
        <property name="statisticsManager" ref="statisticsManager"/>
    </bean>

    <bean id="ratingManager" class="wisematches.server.standing.rating.impl.HibernatePlayerRatingManager">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="ratingSystem">
            <bean class="wisematches.server.standing.rating.impl.systems.ELORatingSystem"/>
        </property>
    </bean>

    <bean id="playerStatisticDao" class="wisematches.server.standing.statistic.impl.PlayerStatisticDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="statisticsManager" class="wisematches.server.standing.statistic.impl.PlayerStatisticManagerImpl">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="ratingManager" ref="ratingManager"/>
        <property name="accountManager" ref="accountManager"/>
        <property name="playerStatisticDao" ref="playerStatisticDao"/>
    </bean>

    <bean id="robotsActivityManager" class="wisematches.server.gameplaying.robot.impl.RobotActivityCenter">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="robotBrainManager" ref="robotsBrainManager"/>
        <property name="transactionManager" ref="transactionManager"/>
        <property name="movesExecutor">
            <bean class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
                <property name="corePoolSize" value="1"/>
                <property name="maxPoolSize" value="5"/>
                <property name="waitForTasksToCompleteOnShutdown" value="false"/>
                <property name="keepAliveSeconds" value="60"/>
            </bean>
        </property>
    </bean>

    <util:list id="roomsManagerList"/>

    <bean id="roomsManager" class="wisematches.server.gameplaying.room.RoomsManager">
        <property name="roomManagers" ref="roomsManagerList"/>
    </bean>

    <util:list id="robotBrainsList"/>

    <bean id="robotsBrainManager" class="wisematches.server.gameplaying.robot.impl.RobotBrainManagerImpl">
        <property name="robotBrains" ref="robotBrainsList"/>
    </bean>

    <!--
    <bean id="serverPropertiesManager" class="wisematches.server.utils.system.impl.HibernateServerPropertiesManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="countriesManager" class="wisematches.server.testimonial.profile.counties.impl.CSVCountriesManager">
        <property name="csvCountriesFile" value="classpath:/i18n/listOfCountries.csv"/>
    </bean>
    -->
</beans>