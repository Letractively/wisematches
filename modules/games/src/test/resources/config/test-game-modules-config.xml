<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="propertiesPlaceholder" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:/config/test-games-settings.properties"/>
    </bean>

    <bean id="wordGamesDictionaries"
          class="wisematches.server.playground.dictionary.impl.resource.ResourceDictionaryManager">
        <property name="filePostfix" value="properties"/>
        <property name="filePrefix" value="dictionary"/>
        <property name="dictionariesPath" value="classpath:/dicts/*"/>
    </bean>
</beans>
