          class="wisematches.server.standing.statistic.impl.StatisticCalculationCenter">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="playerStatisticsManager" ref="statisticsManager"/>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

