<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="classpath:/config/server-base-config.xml"/>

    <!-- Tiles a placed in classpath in /banks/ directory. -->
    <bean id="tilesBankingHouse" class="wisematches.server.gameplaying.scribble.bank.impl.XMLTilesBankingHouse">
        <property name="banksPath" value="classpath:/banks/"/>
    </bean>

    <bean id="scribbleBoardDAO" class="wisematches.server.gameplaying.scribble.board.ScribbleBoardDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="scribbleRoomManager" class="wisematches.server.gameplaying.scribble.room.ScribbleRoomManager">
        <property name="dictionaryManager" ref="wordGamesDictionaries"/>
        <property name="tilesBankingHouse" ref="tilesBankingHouse"/>
        <property name="scribbleBoardDao" ref="scribbleBoardDAO"/>
    </bean>

    <bean id="scribbleRoomManagerFacade" class="wisematches.server.gameplaying.scribble.room.ScribbleRoomManagerFacade">
        <constructor-arg index="0" ref="scribbleRoomManager"/>
    </bean>

    <bean id="roomsManager" class="wisematches.server.gameplaying.room.RoomsManager">
        <property name="roomManagers">
            <list>
                <ref bean="scribbleRoomManager"/>
            </list>
        </property>
    </bean>

    <bean id="ratingsCaculationManager" class="wisematches.server.testimonial.rating.impl.RatingsCalculationCenter">
        <property name="ratingSystem">
            <bean class="wisematches.server.testimonial.rating.impl.systems.ELORatingSystem"/>
        </property>
        <property name="playerManager" ref="playerManager"/>
        <property name="roomsManager" ref="roomsManager"/>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="ratingsManager" class="wisematches.server.testimonial.rating.impl.RatingsManagerImpl">
        <property name="topPlayersCount" value="5"/>
        <property name="ratingsCalculationManager" ref="ratingsCaculationManager"/>
        <property name="ratingsManagerDao" ref="ratingsManagerDao"/>
    </bean>

    <bean id="robotsBrainManager" class="wisematches.server.player.robot.impl.RobotsBrainManagerImpl">
        <property name="robotBrains">
            <list>
                <bean class="wisematches.server.gameplaying.scribble.robot.ScribbleRobotBrain"/>
            </list>
        </property>
    </bean>

    <bean id="guestPlayerManager" class="wisematches.server.core.guest.GuestPlayerManager"/>

    <bean id="playerManager" class="wisematches.server.player.robot.impl.CompositePlayerManager">
        <property name="realPlayerManager" ref="accountManager"/>
        <property name="robotsBrainManager" ref="robotsBrainManager"/>
        <property name="guestPlayerManager" ref="guestPlayerManager"/>
    </bean>

    <bean id="robotMovesExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="1"/>
        <property name="maxPoolSize" value="5"/>
        <property name="waitForTasksToCompleteOnShutdown" value="false"/>
        <property name="keepAliveSeconds" value="60"/>
    </bean>

    <bean id="robotsActivityManager" class="wisematches.server.player.robot.impl.RobotsActivityCenter">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="robotsBrainManager" ref="robotsBrainManager"/>
        <property name="movesExecutor" ref="robotMovesExecutor"/>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="statisticsCleanerCenter" class="wisematches.server.testimonial.statistic.impl.StatisticCleanerCenter">
        <property name="playerStatisticsManager" ref="statisticsManager"/>
        <property name="roomsManager" ref="roomsManager"/>
        <property name="serverPropertiesManager" ref="serverPropertiesManager"/>
    </bean>

    <bean id="statisticCalculationCenter"
          class="wisematches.server.testimonial.statistic.impl.StatisticCalculationCenter">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="playerStatisticsManager" ref="statisticsManager"/>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="statisticsCleanerJobDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="statisticsCleanerCenter"/>
        <property name="targetMethod" value="performClean"/>
        <property name="concurrent" value="false"/>
    </bean>

    <bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="statisticsCleanerJobDetail"/>

        <!-- run every morning at 3 AM -->
        <property name="cronExpression" value="0 0 3 * * ?"/>
    </bean>

    <bean id="gameTimeoutProcessor" class="wisematches.server.gameplaying.cleaner.GameTimeoutTerminator"
          destroy-method="destroy">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="transactionTemplate" ref="transactionTemplateRequiredNew"/>
    </bean>
</beans>
        