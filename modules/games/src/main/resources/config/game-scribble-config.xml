<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="tilesBankingHouse" class="wisematches.server.gameplaying.scribble.bank.impl.XMLTilesBankingHouse">
        <property name="banksPath" value="classpath:/banks/*"/>
    </bean>

    <bean id="scribbleBoardDAO" class="wisematches.server.gameplaying.scribble.board.ScribbleBoardDao">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="scribbleBoardManager" class="wisematches.server.gameplaying.scribble.room.board.ScribbleBoardManager">
        <property name="dictionaryManager" ref="wordGamesDictionaries"/>
        <property name="tilesBankingHouse" ref="tilesBankingHouse"/>
        <property name="scribbleBoardDao" ref="scribbleBoardDAO"/>
    </bean>

    <bean id="scribbleProposalManager"
          class="wisematches.server.gameplaying.scribble.room.proposal.ScribbleProposalManager">
    </bean>

    <bean id="scribbleSearchEngineManager"
          class="wisematches.server.gameplaying.scribble.room.search.ScribbleSearchesEngine">
        <property name="scribbleBoardDao" ref="scribbleBoardDAO"/>
    </bean>

    <bean id="scribbleRoomManager" class="wisematches.server.gameplaying.scribble.room.ScribbleRoomManager">
        <property name="boardManager" ref="scribbleBoardManager"/>
        <property name="proposalManager" ref="scribbleProposalManager"/>
        <property name="searchEngine" ref="scribbleSearchEngineManager"/>
    </bean>

    <bean id="roomsManager" class="wisematches.server.gameplaying.room.RoomsManager">
        <property name="roomManagers">
            <list>
                <ref bean="scribbleRoomManager"/>
            </list>
        </property>
    </bean>

    <bean id="robotsBrainManager" class="wisematches.server.gameplaying.robot.impl.RobotBrainManagerImpl">
        <property name="robotBrains">
            <list>
                <bean class="wisematches.server.gameplaying.scribble.robot.ScribbleRobotBrain"/>
            </list>
        </property>
    </bean>

    <bean id="robotsActivityManager" class="wisematches.server.gameplaying.robot.impl.RobotActivityCenter">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="robotBrainManager" ref="robotsBrainManager"/>
        <property name="transactionManager" ref="transactionManager"/>
        <property name="movesExecutor">
            <bean class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
                <property name="corePoolSize" value="1"/>
                <property name="maxPoolSize" value="5"/>
                <property name="waitForTasksToCompleteOnShutdown" value="false"/>
                <property name="keepAliveSeconds" value="60"/>
            </bean>
        </property>
    </bean>

    <bean id="ratingsCalculationManager" class="wisematches.server.standing.rating.impl.RatingsCalculationCenter">
        <property name="roomsManager" ref="roomsManager"/>
        <property name="playerManager" ref="playerManager"/>
        <property name="transactionManager" ref="transactionManager"/>
        <property name="ratingSystem">
            <bean class="wisematches.server.standing.rating.impl.systems.ELORatingSystem"/>
        </property>
    </bean>

