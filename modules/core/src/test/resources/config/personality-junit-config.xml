<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertiesPlaceholder"
          class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
        <property name="properties">
            <props>
                <prop key="server.admins">1028</prop>
                <prop key="server.moderators">1028</prop>
                <prop key="server.images.path">file:${java.io.tmpdir}/wisematches/work/images</prop>
            </props>
        </property>
    </bean>

    <import resource="personality-config.xml"/>
</beans>