<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="reliablePropertiesManager"
          class="wisematches.server.services.props.impl.FilePropertiesManager">
        <property name="propertiesFile" value="${server.properties.file}"/>
    </bean>

    <bean id="commonFreemarkerConfigurer"
          class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value=""/>
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="freemarkerVariables">
            <map>
                <entry key="personalityManager" value-ref="personalityManager"/>
                <entry key="playerStateManager" value-ref="playerStateManager"/>
                <entry key="gameMessageSource" value-ref="gameMessageSource"/>
            </map>
        </property>
        <property name="freemarkerSettings">
            <props>
                <prop key="number_format">computer</prop>
                <prop key="object_wrapper">freemarker.ext.beans.BeansWrapper</prop>
                <prop key="template_exception_handler">rethrow</prop>
            </props>
        </property>
    </bean>

    <bean name="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="fallbackToSystemLocale" value="false"/>
        <property name="useCodeAsDefaultMessage" value="true"/>

        <property name="basenames">
            <array>
                <value>classpath:/i18n/web</value>
                <value>classpath:/i18n/tips</value>
                <value>classpath:/i18n/notify</value>
                <value>classpath:/i18n/exceptions</value>
            </array>
        </property>
    </bean>

    <bean id="applicationEventTaskExecutor" class="wisematches.core.task.executor.TransactionAwareExecutor">
        <property name="taskExecutor">
            <bean class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler">
                <property name="poolSize" value="1"/>
                <property name="threadNamePrefix" value="NotificationManager"/>
                <property name="waitForTasksToCompleteOnShutdown" value="true"/>
            </bean>
        </property>
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="applicationEventMulticaster" class="org.springframework.context.event.SimpleApplicationEventMulticaster">
        <property name="taskExecutor" ref="applicationEventTaskExecutor"/>
    </bean>

    <bean id="gameMessageSource" class="wisematches.server.web.i18n.GameMessageSource">
        <property name="messageSource" ref="messageSource"/>
    </bean>

    <bean id="playerStateManager" class="wisematches.server.services.state.impl.HibernatePlayerStateManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="scribbleObjectsConverter"
          class="wisematches.server.web.controllers.playground.scribble.controller.board.ScribbleObjectsConverter">
        <property name="gameMessageSource" ref="gameMessageSource"/>
    </bean>

    <bean id="advertisementManager" class="wisematches.server.services.reclame.impl.XMLAdvertisementManager">
        <property name="adsResource" value="${advertisement.providers.file}"/>
    </bean>

    <bean id="dictionaryChangeManager"
          class="wisematches.server.services.dictionary.impl.HibernateDictionarySuggestionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="dictionaryManager" ref="dictionaryManager"/>
    </bean>
</beans>