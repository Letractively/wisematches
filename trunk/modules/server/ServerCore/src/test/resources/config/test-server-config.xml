<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="propertiesPlaceholder" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:/config/core-server-settings.properties"/>
    </bean>

    <import resource="classpath:/config/server-core-config.xml"/>

    <bean id="ratingsManager" class="wisematches.server.core.rating.impl.RatingsManagerImpl">
        <property name="topPlayersCount" value="5"/>
    </bean>

    <alias name="serverSessionFactory" alias="sessionFactory"/>
</beans>
