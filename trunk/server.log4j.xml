<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="ErrorFileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="Threshold" value="WARN"/>
        <param name="file" value="../logs/wm-errors.log"/>
        <param name="append" value="false"/>

        <param name="MaxFileSize" value="10MB"/>
        <param name="MaxBackupIndex" value="10"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %p [%t] %c.%M - %m%n"/>
        </layout>
    </appender>

    <appender name="DebugFileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="file" value="../logs/wm-debug.log"/>
        <param name="append" value="false"/>

        <param name="MaxFileSize" value="50MB"/>
        <param name="MaxBackupIndex" value="10"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %p [%t] %c - %m%n"/>
        </layout>
    </appender>

    <logger name="wisematches">
        <appender-ref ref="DebugAppender"/>
        <appender-ref ref="FileAppender"/>
    </logger>

    <root/>
</log4j:configuration>
